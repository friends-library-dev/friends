{
  "name": "@friends-library/friends",
  "description": "yml-based flat file datastore for friends library",
  "version": "4.26.0",
  "main": "./dist/index.js",
  "browser": "./src/index.ts",
  "license": "MIT",
  "repository": "github:friends-library-dev/friends",
  "sideEffects": false,
  "scripts": {
    "test": "fldev test",
    "test:watch": "fldev test:watch",
    "lint": "fldev lint",
    "lint:fix": "fldev lint:fix",
    "ts:check": "fldev ts:check",
    "format": "fldev format",
    "precompile": "rm -f ./query.d.ts",
    "compile": "fldev ts:compile",
    "postcompile": "bash ./postcompile.sh",
    "prepublishOnly": "npm run generate:js-map && npm run compile",
    "verify:intake": "fldev tsnode ./verify/intake.ts",
    "verify:assets": "fldev tsnode ./verify/assets.ts",
    "verify:headings": "fldev tsnode ./verify/headings.ts",
    "generate:js-map": "fldev tsnode ./src/js-map-gen.ts",
    "postpublish": "node ./postpublish.js",
    "npub:precheck": "fldev ci"
  },
  "dependencies": {
    "@friends-library/types": "^6.0.0",
    "glob": "^7.1.4",
    "js-yaml": "^3.12.0",
    "jsonschema": "1.2.6",
    "lodash": "^4.17.11",
    "x-ts-utils": "^1.2.0"
  },
  "devDependencies": {
    "@friends-library/dev": "~4.4.1",
    "@friends-library/document-meta": "^2.2.2",
    "@friends-library/env": "^1.4.0",
    "@friends-library/friend-repos": "^1.1.1",
    "@types/glob": "^7.1.3",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.165",
    "@types/node-fetch": "^2.5.7",
    "node-fetch": "^2.6.1",
    "p-limit": "^3.0.2",
    "x-chalk": "^1.0.1",
    "x-exec": "^1.2.0"
  }
}
