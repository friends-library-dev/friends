{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./verify"],
    "skipLibCheck": true,
    "target": "ES2019",
    "module": "CommonJS",
    "incremental": true,
    "lib": ["ESNext"]
  },
  "exclude": ["./dist", "./verify", "**/__tests__/*"]
}
